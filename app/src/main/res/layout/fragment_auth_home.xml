<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?defaultBackgroundColor"
    tools:context=".AuthHomeFragment">

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultMarginBig"
        android:text="@string/auth_home_header"
        android:textColor="?defaultHeaderTextColor"
        android:textSize="@dimen/defaultHeaderLarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/defaultMarginBig"
        android:layout_marginTop="@dimen/defaultMarginMedium"
        android:text="@string/auth_home_description"
        android:textAlignment="center"
        android:textColor="?defaultTextColor"
        android:textSize="@dimen/defaultTextMedium"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTV" />

</androidx.constraintlayout.widget.ConstraintLayout>